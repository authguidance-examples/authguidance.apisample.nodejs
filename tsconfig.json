{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "lib": ["dom", "es2017"],
    "types": ["reflect-metadata", "mocha"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
