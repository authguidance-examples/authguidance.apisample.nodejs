{
  "api": {
    "port": 8000,
    "sslCertificateFileName": "",
    "sslCertificatePassword": "",
    "useProxy": false,
    "proxyUrl": ""
  },
  "logging": {
    "apiName": "SampleApi",
    "production": {
      "level": "info",
      "performanceThresholdMilliseconds": 500,
      "transports": [{
        "type": "console",
        "prettyPrint": false
      }]
    },
    "development": {
      "level": "info",
      "overrideLevels": {
        "ClaimsCache": "info"
      }
    }
  },
  "oauth": {
    "issuer":         "https://login.mycluster.com/oauth/v2/oauth-anonymous",
    "audience":       "api.mycompany.com",
    "jwksEndpoint":   "http://curity-idsvr-runtime-svc.curity.svc:8443/oauth/v2/oauth-anonymous/jwks",
    "claimsStrategy": "jwt"
  }
}
