{
    "api": {
        "sslCertificateFileName": "mycompany.ssl.pfx",
        "sslCertificatePassword": "SslPassword1",
        "sslPort": 444,
        "useProxy": false,
        "proxyUrl": "http://127.0.0.1:8888",
        "webTrustedOrigins": [
            "https://web.mycompany.com"
        ]
    },
    "logging": {
        "apiName": "SampleApi",
        "production": {
            "level": "info",
            "transports": [
                {
                    "type": "console"
                },
                {
                    "type": "file",
                    "filePrefix": "api",
                    "dirname": "./logs",
                    "maxSize": "10m",
                    "maxFiles": "7d"
                }
            ],
            "performanceThresholdsMilliseconds": {
                "default": 250,
                "operationOverrides": {
                    "authorizer": 1000
                }
            }
        },
        "development": {
            "level": "info",
            "overrideLevels": {
                "ClaimsCache": "info"
            }
        }
    },
    "oauth": {
        "authority":     "https://cognito-idp.eu-west-2.amazonaws.com/eu-west-2_qqJgVeuTn",
        "requiredScope": "https://api.authsamples.com/api/default",
        "clientId":      "",
        "clientSecret":  ""
    },
    "claims": {
        "maxCacheMinutes": 30
    }
}
